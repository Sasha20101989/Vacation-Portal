<UserControl x:Class="Vacation_Portal.MVVM.Views.Controls.DayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vacation_Portal.MVVM.Views.Controls"
             xmlns:vm="clr-namespace:Vacation_Portal.MVVM.ViewModels.For_Pages"
             d:DataContext="{d:DesignInstance {x:Type vm:PersonalVacationPlanningViewModel}}"
             mc:Ignorable="d">
    <Grid>
        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" Width="24" Height="24" Margin="2">
            <Button.Content>
                <TextBlock  x:Name="tbDay" TextAlignment="Center" Foreground="{DynamicResource MaterialDesignBody}" FontSize="11">
                </TextBlock>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
