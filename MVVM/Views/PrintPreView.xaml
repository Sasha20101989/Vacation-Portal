                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[1].Date_end, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[1].Count, Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[2].Date_Start, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="1 1 1 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[2].Date_end, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[2].Count, Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[3].Date_Start, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="1 1 1 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[3].Date_end, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[3].Count, Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                            </TableRow>
                                            <TableRow>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[4].Date_Start, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="1 1 1 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[4].Date_end, StringFormat='{}{0:dd.MM.yyyy}', Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="0 1 0 0">
                                                    <Paragraph>
                                                        <TextBlock Text="{Binding SelectedToShiftVacations[4].Count, Mode=OneWay}"/>
                                                    </Paragraph>
                                                </TableCell>
                                            </TableRow>
                                        </TableRowGroup>
                                    </Table>

                                </TableCell>
                            </TableRow>
                        </TableRowGroup>
                    </Table>

                </FlowDocument>
                
