                                     Grid.Row="1"
                                     Margin="2 10"
                                     TextAlignment="Center"
                                     TextWrapping="Wrap"
                                     FontSize="12"
                                     FontWeight="Bold"
                                     IsReadOnly="True"
                                     md:HintAssist.HelperText="(Ф.И.О. полностью)"
                                     md:TextFieldAssist.PrefixText="от:"
                                     Text="{Binding FullName, Mode=OneWay, FallbackValue=fio}"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="2"
                                     FontSize="12"
                                     Margin="2 10"
                                     TextAlignment="Center"
                                     TextWrapping="Wrap"
                                     FontWeight="Bold"
                                     IsReadOnly="True"
                                     md:HintAssist.HelperText="(должность)"
                                     Text="{Binding Position, Mode=OneWay, FallbackValue=position}"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="3"
                                     FontSize="12"
                                     Margin="2 10"
                                     TextAlignment="Center"
                                     TextWrapping="Wrap"
                                     FontWeight="Bold"
                                     IsReadOnly="True"
                                     md:HintAssist.HelperText="(наименование подразделения)"
                                     Text="{Binding VirtualDepartment, Mode=OneWay, FallbackValue=virtual_department}"/>
                            <TextBox Grid.Column="1"
                                     Grid.Row="4"
                                     FontSize="12"
                                     Margin="2 10"
                                     TextAlignment="Center"
                                     FontWeight="Bold"
                                     IsReadOnly="True"
                                     md:HintAssist.HelperText="(таб.№)"
                                     Text="{Binding SapId, Mode=OneWay, FallbackValue=sap_id}"/>
                        </Grid>
                    </BlockUIContainer>

