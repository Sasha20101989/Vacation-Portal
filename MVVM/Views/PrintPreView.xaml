<Window x:Class="Vacation_Portal.MVVM.Views.PrintPreView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        xmlns:viewmodels="clr-namespace:Vacation_Portal.MVVM.ViewModels" 
        xmlns:models="clr-namespace:Vacation_Portal.MVVM.Models" 
        xmlns:extensions="clr-namespace:Vacation_Portal.Extensions" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        d:DataContext="{d:DesignInstance Type=viewmodels:PrintPreViewModel}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="800"
        Title="Print PreView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" 
                Content="{md:PackIcon Kind=PrinterOutline}"
                Foreground="{StaticResource MaterialDesignDarkForeground}"/>
        <FlowDocumentPageViewer Grid.Column="1" 
                                HorizontalAlignment="Stretch"
                                Margin="10"
                                BorderBrush="Black"
                                BorderThickness="1">
            <FlowDocumentPageViewer.Document>
                
                <FlowDocument ColumnWidth="700"
                              FontFamily="Verdana">
                    <Paragraph TextAlignment="Right">
                        <TextBlock Foreground="Red"
                                   FontSize="10"
                                   Text="Приложение 6 к процедуре 13СР07 Редакция от 01.03.2012"/>
                    </Paragraph>

                    <BlockUIContainer>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="0"
                                       Margin="2 10"
                                       FontSize="12"
                                       Text="В Отдел персонала и общих вопросов"/>
