                                           BorderThickness="1"
                                           Padding="5">
                                    <Paragraph FontSize="11">
                                        <TextBlock>
                                            <Bold>запланированный/оформленный на:</Bold>
                                            <LineBreak/>
                                            <Span>from:</Span>
                                        </TextBlock>
                                    </Paragraph>

                                    <Table CellSpacing="0"
                                           BorderBrush="Black"
                                           BorderThickness="1"
                                           FontSize="11"
                                           TextAlignment="Center">
                                        <Table.Columns>
                                            <TableColumn Width="Auto"/>
                                            <TableColumn Width="Auto"/>
                                            <TableColumn Width="Auto"/>
                                        </Table.Columns>
                                        <TableRowGroup>
                                            <TableRow Background="AliceBlue">
                                                <TableCell>
                                                    <Paragraph>
                                                        <TextBlock>
                                                            <Bold>с</Bold>
                                                            <LineBreak/>
                                                            <Span>from</Span>
                                                        </TextBlock>
                                                    </Paragraph>
                                                </TableCell>
                                                <TableCell BorderBrush="Black"
                                                           BorderThickness="1 0">
                                                    <Paragraph>
                                                        <TextBlock>
                                                            <Bold>по</Bold>
                                                            <LineBreak/>
                                                            <Span>to</Span>
                                                        </TextBlock>
                                                    </Paragraph>
                                                </TableCell>
